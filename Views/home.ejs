<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Webchat</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <h2>Webchat</h2>
    </header>
    <main>
      <section>
        <div id="chatView">
          <article id="chatMessages">
            <ul id="chatList">
              <% if (messages.length > 0) {%>
                <% messages.forEach((message) => { %> 
                  <li data-testid="message"><%= message.createdAt %> - <%= message.from %> : <%= message.message %> </li>
                  <% }) %> 
              <% } %>
            </ul>
          </article>
          <article>
              <input type="text" id="inputNameChange" data-testid="nickname-box" placeholder="Change your name" />
              <button type="button" id="changeNameBtn" data-testid="nickname-save">Change it!</button>
            </div>
            <button data-testid="public" id="publicBtn">Public Chat</button>
            <p>Usu√°rios Online</p>
            <ul id="onlineUsersList" data-testid="nickname-box">
              <% if (onlineUsers.length > 0) {%>
                <% onlineUsers.forEach((user) => { %>
                  <li data-testid="online-user" class="onlineUser" id="<%= user[0] %>" ><%= user[0] %></li>
                <% }) %>  
              <% } %>
            </ul>
          </article>
        </div>
      </section>
      <footer>
        <input type="text" id="input" data-testid="message-box" placeholder="Digite sua mensagem aqui" />
        <button id="sendButton" data-testid="send-button" type="button">Enviar</button>
      </footer>
    </main>
  </body>
  <script>
    const client = io();
    let id;
    let nickname;
    let to;

    const onlineUsersList = document.getElementById('onlineUsersList');
    const sendBtn = document.getElementById('sendButton');
    const chat = document.getElementById('chatList');
    const inputMessage = document.getElementById('input');
    const onlineUsersButtons = document.getElementsByClassName('onlineUser');
    const changeNameBtn = document.getElementById('changeNameBtn');
    const inputNameChange = document.getElementById('inputNameChange');
    const publicBtn = document.getElementById('publicBtn');


    publicBtn.addEventListener('click', () => {
      to = null
      client.emit('getPublicMessages', {});
    });



    changeNameBtn.addEventListener('click', () => {
      const input = inputNameChange.value;
      client.emit('nameChange', {id, input, nickname});
      nickname = input;
    });

    sendBtn.addEventListener('click', () => {
      const chatMessage = inputMessage.value;
      client.emit('message', { id, nickname, to, chatMessage });
    });

    let onlineUsers = 0;
    client.on('connected', (userData) => {
      id = userData.id;
      nickname = userData.name;
    });

    client.on('getPublicMessages', ({ messages }) => {
      chat.innerText = '';
      messages.forEach((message) => {
        const li = document.createElement('li');
        li.innerText = message;
        chat.appendChild(li);
      })
    })

    client.on('message', (messageData) => {
      const li = document.createElement('li');
      li.setAttribute('data-testid', 'message');
      li.innerHTML= messageData
      chat.appendChild(li);
    });

    client.on('newUserConnected', ({ name }) => {
      console.log(`Seja bem vindo ao Chat ${name}`);
    });

    client.on('getPrivateHistory', ({messages}) => {
      chat.innerText='';
      messages.forEach((message) => {
        const li = document.createElement('li');
        li.innerText = message;
        chat.appendChild(li);
      })
    })

    client.on('updateOnlineUsers', (users) => {
      onlineUsersList.innerText = '';
      users.forEach((user) => {
        const li = document.createElement('li');
        const btnPrivate = document.createElement('button');
        btnPrivate.innerHTML = 'Privado';
        btnPrivate.setAttribute('data-testid', 'private');
        li.setAttribute('data-testid', 'online-user');
        li.setAttribute('id', `${user[0]}`);
        li.setAttribute('class', 'onlineUser');
        btnPrivate.addEventListener('click', () => {
            to = user[0];
            client.emit('getPrivateHistory', {nickname, to})
        });
        if (user[0] === nickname) {
          li.innerHTML = user[0];
          onlineUsersList.appendChild(btnPrivate);
          onlineUsersList.prepend(li);
        } else {
          li.innerHTML = user[0];
          onlineUsersList.appendChild(li);
          onlineUsersList.appendChild(btnPrivate);
        }
      });
    });
  </script>
</html>
